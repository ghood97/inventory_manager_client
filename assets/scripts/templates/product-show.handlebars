
<table class="table table-striped table-bordered table-hover product-lookup-table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th id="price-header-display" scope="col">Suggested Retail Price</th>
    </tr>
  </thead>
  <tbody>
  {{#each products as |product|}}
    <tr data-product-id={{product.id}} data-product-name="{{product.name}}" data-toggle="modal" data-target="#add-product-modal">
      <th scope="row">{{product.id}}</th>
      <td>{{product.name}}</td>
      <td>${{product.retail_price}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>